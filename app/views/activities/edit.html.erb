<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render "form", activity: @activity, action: "update", responsibles: @responsibles %> 
      <%= link_to activity_path(@activity.id), method: :delete, data: {confirm: "Are you sure?"} do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end%>
    </div>
  </div>
</div>
