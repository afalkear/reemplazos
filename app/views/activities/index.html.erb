<div class="container-fluid">
  <!-- div class="row">
    <div class="col-md-12">
      <h1> Activities </h1>
    </div>
  </div -->

  <div class="experimental">
    <%= @padma_time_slots unless @padma_time_slots.nil? %>
  </div>
  <div class="row" data-controller="activities">
    <div class="col-md-12">
      <table class="table table-hover table-bordered table-sm">
        <%= render "activities_schedule", 
          activities: @activities,
          days: @days,
          first_day: @first_day,
          hours: @hours,
          first_hour: @first_hour,
          last_hour: @last_hour
        %>
      </table>
    </div>
  </div>

<% if false #old view%>
  <div class="row">
    <div class="col-md-12">
      <table class="activities-table table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Start</th>
            <th>End</th>
            <th>Responsible</th>
            <th>Alarms</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <%= render @activities %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
  <div class="row">
    <div class="col-md-6">
      <%= render "form", activity: @activity, action: "create", responsibles: @responsibles %>
    </div>
    <div class="col-md-6">
      <%= render "alarms/bulk_add" %>
      <%= render "alarms/bulk_remove" %>
    </div>
</div>
