<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>New alarm</h2>
      <%= form_for @alarm, url: {action: "create"} do |f| %>
        <%= f.hidden_field :activity_id, value: @activity_id %>
        <%= f.hidden_field :responsible_id, value: @responsible_id %>
        <div class="form-group">
          <%= f.text_field :offset  %>
        </div>
        <div class="form-group">
          <%= f.select :offset_type, Alarm::VALID_OFFSETS %>
        </div>
        <div class="form-group">
          <%= f.submit "Create" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
